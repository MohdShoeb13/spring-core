<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">
      
      <!-- using value tags -->
      <bean class="com.springcore.Student" name="student">
             <property name="studentId">
                    <value>123</value>
             </property>
             <property name="studentName">
                     <value>Shoeb</value>
             </property>
             <property name="studentAddress">
                     <value>Delhi</value>
             </property>
      </bean>
      
      <!-- Using value attribute -->
      <bean name="student2"  class="com.springcore.Student">
              <property name="studentId"   value="12234"/>
              <property name="studentName" value="Shuja"/>
              <property name="studentAddress"  value="Delhi"/>
      </bean>
      
      <!-- using p schema -->
      <bean name="student3"  class="com.springcore.Student" p:studentId="65552"  p:studentName="Saif" p:studentAddress="Bengaluru"/>

</beans>